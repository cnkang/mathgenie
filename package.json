{
  "name": "mathgenie",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "dependencies": {
    "@vercel/speed-insights": "^1.2.0",
    "jspdf": "^3.0.2",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "web-vitals": "^5.1.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "npm-run-all --parallel test:unit test:e2e",
    "test:unit": "vitest --run --coverage",
    "prepare": "husky",
    "coverage": "vitest --coverage",
    "verify": "node scripts/verify-pnpm.js",
    "clean": "rm -rf node_modules pnpm-lock.yaml dist coverage",
    "reinstall": "pnpm clean && pnpm install",
    "lint": "eslint src --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,css,json}\"",
    "type-check": "tsc --noEmit",
    "build:types": "tsc --emitDeclarationOnly",
    "analyze": "pnpm build && npx webpack-bundle-analyzer dist/assets/*.js",
    "test:watch": "vitest",
    "test:e2e": "playwright test --config=playwright.config.ts",
    "test:e2e:ci": "playwright test --config=playwright.ci.config.ts",
    "test:smoke": "playwright test --config=playwright.smoke.config.ts",
    "test:e2e:ui": "playwright test --config=playwright.config.ts --ui",
    "test:e2e:headed": "playwright test --config=playwright.config.ts --headed",
    "test:e2e:debug": "playwright test --config=playwright.config.ts --debug",
    "test:e2e:report": "playwright show-report",
    "playwright:install": "playwright install --with-deps",
    "playwright:install:ci": "playwright install chromium firefox webkit --with-deps",
    "pre-commit": "lint-staged",
    "pre-push": "pnpm type-check && pnpm test:unit && pnpm build",
    "commit": "git-cz",
    "validate": "pnpm lint && pnpm type-check && pnpm test && pnpm build"
  },
  "eslintConfig": {
    "extends": [
      "react-app"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@babel/cli": "^7.28.3",
    "@babel/core": "^7.28.3",
    "@babel/plugin-transform-runtime": "^7.28.3",
    "@babel/preset-env": "^7.28.3",
    "@babel/preset-react": "^7.27.1",
    "@babel/register": "^7.28.3",
    "@eslint/js": "^9.34.0",
    "@fullhuman/postcss-purgecss": "^7.0.2",
    "@playwright/test": "^1.49.1",
    "@testing-library/dom": "^10.4.1",

    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/node": "^22.18.0",
    "@types/react": "^19.0.2",
    "@types/react-dom": "^19.0.2",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "@vitejs/plugin-react": "^5.0.1",
    "@vitest/coverage-v8": "^3.2.4",
    "autoprefixer": "^10.4.21",
    "c8": "^10.1.3",
    "cssnano": "^7.1.1",
    "cssnano-preset-advanced": "^7.0.9",
    "eslint": "^9.34.0",
    "eslint-plugin-react": "^7.37.5",
    "globals": "^16.3.0",
    "happy-dom": "^18.0.1",
    "husky": "^9.1.7",
    "identity-obj-proxy": "^3.0.0",
    "jiti": "^2.5.1",
    "lint-staged": "^16.1.6",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.6",
    "terser": "^5.43.1",
    "tsx": "^4.20.5",
    "typescript": "^5.7.2",
    "vite": "^7.1.3",
    "vite-plugin-compression": "^0.5.1",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix --max-warnings=0",
      "prettier --write"
    ],
    "*.{css,scss,less}": [
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "packageManager": "pnpm@8.15.1"
}
