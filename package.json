{
  "name": "mathgenie",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "dependencies": {
    "@vercel/speed-insights": "^1.2.0",
    "jspdf": "^3.0.2",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "web-vitals": "^5.1.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "npm-run-all test:unit test:e2e",
    "test:unit": "vitest --run --coverage",
    "prepare": "husky",
    "coverage": "vitest --coverage",
    "verify": "node scripts/verify-pnpm.js",
    "clean": "rm -rf node_modules pnpm-lock.yaml dist coverage",
    "reinstall": "pnpm clean && pnpm install",
    "lint": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,css,json}\"",
    "type-check": "tsc --noEmit",
    "build:types": "tsc --emitDeclarationOnly",
    "analyze": "pnpm build && npx webpack-bundle-analyzer dist/assets/*.js",
    "test:watch": "vitest",
    "test:e2e": "playwright test --config=playwright.config.ts",
    "test:e2e:ci": "CI=true playwright test --config=playwright.config.ts --project=chromium",
    "test:smoke": "playwright test tests/e2e/basic.spec.ts --config=playwright.config.ts --project=chromium",
    "test:e2e:ui": "playwright test --config=playwright.config.ts --ui",
    "test:e2e:headed": "playwright test --config=playwright.config.ts --headed",
    "test:e2e:debug": "playwright test --config=playwright.config.ts --debug",
    "test:e2e:report": "playwright show-report",
    "test:e2e:enhanced": "playwright test --config=playwright.e2e.config.ts",
    "test:e2e:error-handling": "playwright test tests/e2e/error-handling.spec.ts",
    "test:e2e:localstorage": "playwright test tests/e2e/localstorage-persistence.spec.ts",
    "test:e2e:presets": "playwright test tests/e2e/presets-functionality.spec.ts",
    "test:e2e:integration": "playwright test tests/e2e/integration.spec.ts",
    "test:e2e:accessibility": "playwright test tests/e2e/accessibility.spec.ts",
    "test:e2e:quick": "./scripts/test-e2e.sh quick",
    "test:e2e:full": "./scripts/test-e2e.sh full",
    "playwright:install": "playwright install --with-deps",
    "playwright:install:ci": "playwright install chromium firefox webkit --with-deps",
    "pre-commit": "lint-staged",
    "pre-push": "pnpm type-check && pnpm test:unit && pnpm build",
    "commit": "git-cz",
    "validate": "pnpm lint && pnpm type-check && pnpm test && pnpm build"
  },
  "eslintConfig": {
    "extends": [
      "react-app"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@babel/cli": "^7.28.3",
    "@babel/core": "^7.28.3",
    "@babel/plugin-transform-runtime": "^7.28.3",
    "@babel/preset-env": "^7.28.3",
    "@babel/preset-react": "^7.27.1",
    "@babel/register": "^7.28.3",
    "@eslint/js": "^9.34.0",
    "@fullhuman/postcss-purgecss": "^7.0.2",
    "@playwright/test": "^1.55.0",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.3.0",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "@vitejs/plugin-react": "^5.0.2",
    "@vitest/coverage-v8": "^3.2.4",
    "autoprefixer": "^10.4.21",
    "c8": "^10.1.3",
    "cssnano": "^7.1.1",
    "cssnano-preset-advanced": "^7.0.9",
    "eslint": "^9.34.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "happy-dom": "^18.0.1",
    "husky": "^9.1.7",
    "identity-obj-proxy": "^3.0.0",
    "jiti": "^2.5.1",
    "lint-staged": "^16.1.6",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.6",
    "terser": "^5.43.1",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "vite": "^7.1.4",
    "vite-plugin-compression": "^0.5.1",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix --max-warnings=0",
      "prettier --write"
    ],
    "*.{css,scss,less}": [
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "packageManager": "pnpm@8.15.1"
}
