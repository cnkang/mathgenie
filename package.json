{
  "name": "mathgenie",
  "version": "1.0.0",
  "private": true,
  "license": "MIT",
  "type": "module",
  "sideEffects": [
    "*.css",
    "./src/index.tsx",
    "./src/reportWebVitals.ts",
    "./src/utils/serviceWorker.ts"
  ],
  "dependencies": {
    "@vercel/speed-insights": "^1.2.0",
    "jspdf": "^3.0.3",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "web-vitals": "^5.1.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsx scripts/optimize-build.ts",
    "build:fast": "vite build",
    "preview": "vite preview",
    "test": "VITEST_COVERAGE=1 tsx scripts/unified-test.ts unit",
    "test:all": "tsx scripts/unified-test.ts validate",
    "test:unit": "VITEST_COVERAGE=1 tsx scripts/unified-test.ts unit",
    "test:unit:ci": "VITEST_COVERAGE=1 tsx scripts/unified-test.ts unit:ci",
    "test:unit:watch": "tsx scripts/unified-test.ts unit:watch",
    "test:unit:no-coverage": "tsx scripts/unified-test.ts unit --no-coverage",
    "prepare": "husky",
    "coverage": "VITEST_COVERAGE=1 vitest --coverage",
    "verify": "node scripts/verify-pnpm.js",
    "clean": "rm -rf node_modules pnpm-lock.yaml dist coverage",
    "reinstall": "pnpm clean && pnpm install",
    "lint": "eslint src scripts --ext .ts,.tsx --fix --max-warnings 0 && prettier --write \"src/**/*.{ts,tsx}\" \"scripts/**/*.{ts,tsx}\" --config .prettierrc.json",
    "sonar:check": "tsx scripts/sonar-check.ts",
    "sonar:high": "tsx scripts/sonar-check.ts --high",
    "sonar:verbose": "tsx scripts/sonar-check.ts --verbose",
    "sonar:high:verbose": "tsx scripts/sonar-check.ts --high --verbose",
    "sonar:scan": "sonar-scanner",
    "sonar:local": "pnpm lint && pnpm sonar:check && echo 'âœ… Local SonarJS checks passed - should align with SonarCloud'",
    "lint:css": "stylelint \"src/**/*.css\" \"public/**/*.css\" --formatter string",
    "lint:css:fix": "stylelint \"src/**/*.css\" \"public/**/*.css\" --fix",
    "lint:html": "html-validate \"index.html\" \"public/**/*.html\" \"src/**/*.html\"",
    "lint:css-html": "tsx scripts/css-html-quality-check.ts",
    "lint:css-html:fix": "tsx scripts/css-html-quality-check.ts --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,css,json}\" --config .prettierrc.json",
    "type-check": "tsc --noEmit",
    "build:types": "tsc --emitDeclarationOnly",
    "analyze": "pnpm build:fast && npx vite-bundle-analyzer dist/assets/*.js",
    "deps:check": "pnpm --silent outdated --no-color --format table || true",
    "test:watch": "node --max-old-space-size=4096 ./node_modules/.bin/vitest",
    "test:e2e": "tsx scripts/unified-test.ts e2e",
    "test:e2e:ci": "CI=true tsx scripts/unified-test.ts e2e --project=chromium",
    "test:smoke": "tsx scripts/unified-test.ts e2e --suite=basic --project=chromium",
    "test:e2e:ui": "tsx scripts/unified-test.ts e2e:ui",
    "test:e2e:headed": "tsx scripts/unified-test.ts e2e:headed",
    "test:e2e:debug": "tsx scripts/unified-test.ts e2e:debug",
    "test:e2e:report": "playwright show-report",
    "test:e2e:error-handling": "tsx scripts/unified-test.ts e2e --suite=error-handling",
    "test:e2e:localstorage": "tsx scripts/unified-test.ts e2e --suite=localstorage-persistence",
    "test:e2e:presets": "tsx scripts/unified-test.ts e2e --suite=presets-functionality",
    "test:e2e:integration": "tsx scripts/unified-test.ts e2e --suite=integration",
    "test:e2e:accessibility": "tsx scripts/unified-test.ts e2e --suite=accessibility-unified",
    "test:e2e:quick": "tsx scripts/unified-test.ts e2e --suite=basic",
    "test:e2e:full": "tsx scripts/unified-test.ts e2e",
    "test:mobile": "tsx scripts/unified-test.ts e2e:mobile all",
    "test:mobile:iphone": "tsx scripts/unified-test.ts e2e:mobile iphone",
    "test:mobile:iphone16": "tsx scripts/unified-test.ts e2e:mobile iphone16",
    "test:mobile:iphone15": "tsx scripts/unified-test.ts e2e:mobile iphone15",
    "test:mobile:ipad": "tsx scripts/unified-test.ts e2e:mobile ipad",
    "test:mobile:android": "tsx scripts/unified-test.ts e2e:mobile android",
    "test:mobile:galaxy": "tsx scripts/unified-test.ts e2e:mobile galaxy",
    "test:mobile:pixel": "tsx scripts/unified-test.ts e2e:mobile pixel",
    "test:mobile:latest": "tsx scripts/unified-test.ts e2e:mobile latest",
    "playwright:install": "playwright install chromium firefox webkit --with-deps",
    "playwright:install:ci": "playwright install chromium firefox webkit --with-deps",
    "playwright:check": "tsx scripts/check-browsers.ts",
    "playwright:debug": "./scripts/debug-playwright-browsers.sh",
    "playwright:cache:debug": "./scripts/debug-playwright-cache.sh",
    "pre-commit": "pnpm format && lint-staged",
    "pre-push": "pnpm type-check && pnpm i18n:check && pnpm test:unit && pnpm build",
    "commit": "git-cz",
    "validate": "pnpm lint && pnpm lint:css-html && pnpm type-check && pnpm sonar:check && pnpm i18n:check && pnpm build && pnpm playwright:check && tsx scripts/unified-test.ts validate",
    "validate:full": "pnpm lint && pnpm lint:css-html && pnpm type-check && pnpm sonar:check && pnpm i18n:check && pnpm build && pnpm playwright:check && tsx scripts/unified-test.ts validate",
    "lighthouse": "lhci autorun",
    "lighthouse:ci": "lhci autorun --fatal-assert-errors",
    "lighthouse:collect": "lhci collect",
    "lighthouse:assert": "lhci assert --fatal-assert-errors",
    "lighthouse:upload": "lhci upload",
    "i18n:check": "tsx scripts/check-i18n.ts"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@eslint/js": "^9.38.0",
    "@fullhuman/postcss-purgecss": "^7.0.2",
    "@lhci/cli": "^0.15.1",
    "@playwright/test": "^1.56.1",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.9.2",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "@vitejs/plugin-react": "^5.1.0",
    "@vitest/coverage-v8": "^3.2.4",
    "autoprefixer": "^10.4.21",
    "c8": "^10.1.3",
    "cssnano": "^7.1.2",
    "cssnano-preset-advanced": "^7.0.9",
    "eslint": "^9.38.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "eslint-plugin-sonarjs": "^3.0.5",
    "globals": "^16.4.0",
    "happy-dom": "^20.0.10",
    "html-validate": "^10.2.1",
    "husky": "^9.1.7",
    "identity-obj-proxy": "^3.0.0",
    "jiti": "^2.6.1",
    "lint-staged": "^16.2.6",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "stylelint": "^16.25.0",
    "stylelint-config-recess-order": "^7.4.0",
    "stylelint-config-standard": "^39.0.1",
    "terser": "^5.44.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vite": "^7.1.12",
    "vite-plugin-compression": "^0.5.1",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "eslint --fix --max-warnings=0",
      "prettier --write --config .prettierrc.json"
    ],
    "tests/e2e/**/*.{ts,tsx}": [
      "prettier --write --config .prettierrc.json"
    ],
    "*.{css,scss,less}": [
      "stylelint --fix",
      "prettier --write --config .prettierrc.json"
    ],
    "*.html": [
      "html-validate"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write --config .prettierrc.json"
    ]
  },
  "pnpm": {
    "overrides": {
      "glob": "^11.0.3",
      "rimraf": "^6.0.1",
      "chrome-launcher": "^1.2.0",
      "tmp": "^0.2.5",
      "os-tmpdir": "^2.0.0",
      "punycode": "npm:punycode.js@^2.3.1",
      "@babel/plugin-proposal-private-methods": "npm:@babel/plugin-transform-private-methods@^7.27.1"
    }
  },
  "packageManager": "pnpm@10.18.0+sha512.e804f889f1cecc40d572db084eec3e4881739f8dec69c0ff10d2d1beff9a4e309383ba27b5b750059d7f4c149535b6cd0d2cb1ed3aeb739239a4284a68f40cfa"
}
